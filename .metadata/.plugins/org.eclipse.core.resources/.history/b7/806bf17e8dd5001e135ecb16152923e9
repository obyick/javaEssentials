package application;

import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.Scanner;
import java.util.stream.Collectors;

public class Programm {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner scan = new Scanner(System.in);
		
		List<String> list = new ArrayList<>();
		
		// Add types
		list.add("Flamengo");
		list.add(0, "Fluminense");
		list.add("Bota Fogo");
		list.add("Palmeiras");
		list.add("SÃ£o Paulo");
		list.add("Corinthians");
		list.add("Vasco da Gama");
		list.addAll(list);

		System.out.println("1th: " + list);
		
		// Remove types
		list.remove(2);
		list.removeIf(x -> x.charAt(0) == 'V');
		list.removeIf(x -> x == "Bota Fogo");

		System.out.println("2th: " + list);
		
		// Remove duplicates
		for(int i = 0; i < list.size() - 1; i++) {
			for(int j = 0; j < list.size() - 1 - i; j++)
				if(list.indexOf((Object) i) == list.indexOf((Object) j)) {
					list.remove(i);
				}
		}
		
		// Filter to another list
		List<String> listWithM = list.stream().filter(x -> x.charAt(0) == 'F').collect(Collectors.toList());
		
		System.out.println(list);
		System.out.println(listWithM);
		
		scan.close();
	}

}
