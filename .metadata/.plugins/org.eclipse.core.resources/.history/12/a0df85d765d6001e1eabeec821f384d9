package application;

import java.time.Instant;
import java.time.LocalDate;
import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;
import java.util.Locale;
import java.util.Scanner;

public class programm {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner scan = new Scanner(System.in);
		
		DateTimeFormatter date = DateTimeFormatter.ofPattern("dd/MM/yyyy and HH:mm");

		// Local
		System.out.println(LocalDate.now());

		// Local
		System.out.println(LocalDateTime.now());

		// GMT
		System.out.println(Instant.now());
		
		// Convert to ISO086
		System.out.println(Instant.now().toString());

		// New LocalDate object
		System.out.println(LocalDateTime.parse("04/01/2002 and 02:12", date));
		
		// Specific date and hour using of
		System.out.println(LocalDateTime.of(2002, 1, 1, 2, 12).format(date));

//		LocalDate date = Instant.now() - LocalDateTime.now();

		scan.close();
	}

}